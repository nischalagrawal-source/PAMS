# ============================================================
# P&AMS — Environment Variables
# Copy this to .env and fill in your values
# ============================================================

# Database (PostgreSQL — Railway, Neon, Supabase, or local)
DATABASE_URL="postgresql://user:password@host:5432/pams?schema=public"

# NextAuth
AUTH_SECRET="generate-with: npx auth secret"
AUTH_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"

# Email (Resend)
RESEND_API_KEY=""
EMAIL_FROM="noreply@yourdomain.com"

# File Storage (Cloudflare R2 — S3-compatible)
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="pams-uploads"
R2_PUBLIC_URL=""

# WhatsApp (to be configured later)
# WHATSAPP_PROVIDER="twilio" or "wati"
# WHATSAPP_API_KEY=""
# WHATSAPP_FROM_NUMBER=""
